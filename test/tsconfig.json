{
  "compilerOptions": {
    "baseUrl": "..",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6",
      "ES2017",
      "ES2018"
    ],
    "types": [
      "node",
      "foundry-pc-types",
      "chai",
      "mocha",
    ],
    "allowUmdGlobalAccess": true,
    "paths": {
      "@src/*": [
        "src/scripts/*"
      ]
    }
  },
  "include": [
    "./**/*.test.ts",
    "../src/scripts/**/*.ts",
  ],
  "exclude": [
    "../node_modules"
  ],
}
