{
  "compilerOptions": {
    "baseUrl": "..",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6",
      "ES2017",
      "ES2018"
    ],
    "types": [
      "node",
      "foundry-pc-types",
      "chai",
      "mocha",
      "PopoutModule",
      "NodeJS",
    ],
    "typeRoots": [
      "util/types",
      "../src/types",
      "../node_modules/@types",
    ],
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "test/*"
      ],
      "@src/*": [
        "src/scripts/*"
      ],
    }
  },
  "include": [
    "./**/*.test.ts",
    "../src/scripts/**/*.ts",
    "../src/scripts/**/*.d.ts",
    "./**/*.d.ts",
  ],
  "exclude": [
    "../node_modules"
  ]
}
