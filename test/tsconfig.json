{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "types": [
      "node",
      "foundry-pc-types",
      "chai",
      "mocha",
      "NodeJS",
      "FoundryVTT",
      "PopoutModule",
    ],
    "typeRoots": [
      "@types",
      "../src/@types",
      "../node_modules/@types",
    ],
    "paths": {
      "@util/*": [
        "test/@util/*"
      ],
      "@src/*": [
        "src/scripts/*"
      ],
      "@/*": [
        "test/*"
      ],
    },
  },
}
